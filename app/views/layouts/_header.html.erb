<header class="navbar navbar-fixed-top navbar-inverse tweeter-navbar">
    <div class="container">
        <%= link_to "Tweeter", root_path, id: "logo" %>
        <nav>
            <ul class="nav navbar-nav navbar-right">
            <li class="nav-items"><%= link_to t('navbar.home'), root_path %></li>
            <li class="nav-items"><%= link_to t('navbar.help'), help_path %></li>
            <% if logged_in? %>
            <li class="nav-items"><%= link_to t('navbar.users'), users_path %></li>
            <li class="dropdown nav-items">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('navbar.account')%> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                <li><%= link_to t('navbar.profile'), current_user %></li>
                <li><%= link_to t('navbar.settings'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                    <%= link_to t('navbar.logout'), logout_path, method: :delete %>
                </li>
                </ul>
            </li>
            <% else %>
            <li class="nav-items"><%= link_to t('navbar.login'), login_path %></li>
            <% end %>
            </ul>
        </nav>
    </div>
</header>