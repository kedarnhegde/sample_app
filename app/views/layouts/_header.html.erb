<header class="navbar navbar-fixed-top navbar-inverse tweeter-navbar">
    <div class="container">
        <%= link_to "Tweeter", root_path, id: "logo" %>
        <nav>
            <ul class="nav navbar-nav navbar-right">
            <li class="nav-items"><%= link_to "Home", root_path %></li>
            <li class="nav-items"><%= link_to "Help", help_path %></li>
            <% if logged_in? %>
            <li class="nav-items"><%= link_to "Users", users_path %></li>
            <li class="dropdown nav-items">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                    <%= link_to "Log out", logout_path, method: :delete %>
                </li>
                </ul>
            </li>
            <% else %>
            <li class="nav-items"><%= link_to "Log in", login_path %></li>
            <% end %>
            </ul>
        </nav>
    </div>
</header>