<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !user.admin? %>
    | <%= link_to t('buttons.delete'), user, method: :delete, class: "red-text",
                                  data: { confirm: "Are you sure about deleting this User?" } %>
  <% end %>
</li>
