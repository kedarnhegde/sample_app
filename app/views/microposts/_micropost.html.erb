<li id="micropost-<%= micropost.id %>">
  <div class="micropost-content">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <div class="micropost-text">
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
      <span class="content">
        <%= micropost.content %>
        <%= image_tag micropost.picture.url if micropost.picture? %>
      </span>
      <span class="timestamp">
         <%= t('others.time_ago', time: time_ago_in_words(micropost.created_at)) %>
        <% if current_user?(micropost.user) %>
          <%= link_to t('buttons.delete'), micropost, method: :delete, class: "red-text",
                                          data: { confirm: "Are you sure about deleting this micropost?" } %>
        <% end %>
      </span>
    </div>
  </div>
</li>
